<!DOCTYPE html>
<html>

<head>
  <title>Admin</title>
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" href="https://code.getmdl.io/1.2.1/material.indigo-blue.min.css">
  <script defer src="https://code.getmdl.io/1.2.1/material.min.js"></script>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body class="mdl-color--white">
  <div class="body-wrapper">
    <header class="mdl-layout__header mdl-color--blue-100">
      <div class="mdl-layout__header-row">
        <span class="mdl-layout-title mdl-color-text--black">Adminpage</span>
        <div class="mdl-layout-spacer"></div>
        <nav class="mdl-navigation">
          <a href="/chatroom" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-color-text--grey-800" id="chatroomButton">Go To Chat</a>
          <a href="/logout" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-color-text--grey-800 mdl-color--blue-200" id="logoutButton">Logout</a>
        </nav>
      </div>
    </header>
        {{message}}
          <table class="adminTables reports mdl-data-table mdl-js-data-table mdl-shadow--2dp">
            <thead>
              <th>Reported User</th>
              <th>Reported By</th>
              <th>Reason</th>
              <th>Time</th>
              <th>Commands</th>
            </thead>
            <tbody>
              {{#reports}}
                <tr id="reportreasons">
                    <td>{{reporteduser}}</td>
                    <td>{{reportedby}}</td>
                    <td class="reportReason">{{reason}}</td>
                    <td>{{timestamp}}</td>
                    <td>
                      <form action="/admin/banUser" method="post">
                          <button name="BanUser" class="adminButtons mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" value={{reporteduser}}>Ban</button>
                      </form>
                    </td>

                    <td>
                      <form action="/admin/removeReport" method="post">
                          <button name="RemoveReport" class="adminButtons mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" value={{_id}}>Remove this report</button>
                      </form>
                    </td>

                    <td>
                      <form action="/admin/removeAllReports" method="post">
                          <button name="RemoveAllReports" class="adminButtons mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" value={{reporteduser}}>Remove all reports from this user</button>
                      </form>
                    </td>
                </tr>
            {{/reports}}
          </tbody>
      </table>

      <table class="adminTables bans mdl-data-table mdl-js-data-table mdl-shadow--2dp">
        <thead>
          <th>Banned Users</th>
        </thead>
        <tbody>
          {{#bans}}
            <tr>
                <td>{{username}}</td>

                <td>
                  <form action="/admin/unBanUser" method="post">
                      <button name="unBanUser" class="adminButtons mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" value={{username}}>Unban</button>
                  </form>
                </td>
            </tr>
        {{/bans}}
      </tbody>
  </table>
  </div>
  </body>
</html>
