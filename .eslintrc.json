{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "comma-dangle": [
            "error", 
            "always-multiline"
        ],
        "brace-style": [
            "error"
        ],
        "no-var": [
            "error"
        ],
        "indent": [
            "error",
            2
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
